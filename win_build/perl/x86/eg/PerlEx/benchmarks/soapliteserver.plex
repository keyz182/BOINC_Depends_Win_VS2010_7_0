use SOAP::Transport::HTTP;

my $server = new SOAP::Transport::HTTP::CGI;
$server->dispatch_to('Demo')->handle;

package Demo;

sub hi {                     
return "hello, world";     
}

sub bye {                    
return "goodbye, cruel world";
}

sub echostring {
    my($class, $echo) = @_;
    return $echo;
}
